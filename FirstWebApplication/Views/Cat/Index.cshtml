@model List<CatCorm> 
@{
    ViewData["Title"] = "Index";
}

@*<partial name="_Notification" />*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CatCorm List</h2>
        </div>
         <div class="col-6 text-end" >
            <a asp-controlier="CatController" asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New CatCorm 
            </a>
        </div>
    </div>    
</div>
<br /><br />  

<table class="table table-light table-striped table-bordered border border-2" style="widht:100%">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Тип
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var corm in Model)
        {        
        <tr>
            <td width="30%">
                @corm.Name
            </td>
            <td width="50%">
                @corm.Type
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Cat" asp-action="Edit" asp-route-id="@corm.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Cat" asp-action="Delete" asp-route-id="@corm.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

